# Gunakan image Python yang ringan
FROM python:3.10-slim

# Set direktori kerja di dalam container
WORKDIR /app

# Install dependencies untuk Blender CLI dan kebutuhan sistem
RUN apt-get update && apt-get install -y \
    wget \
    unzip \
    xz-utils \
    ca-certificates \
    libgl1 \
    libx11-6 \
    libxi6 \
    libxcursor1 \
    libxrandr2 \
    libxinerama1 \
    libxxf86vm1 \
    libdbus-1-3 \
    libgtk-3-0 \
    libnss3 \
    libasound2 \
    libxcomposite1 \
    libxdamage1 \
    libxss1 \
    libxtst6 \
    libatk1.0-0 \
    libatk-bridge2.0-0 \
    libgdk-pixbuf2.0-0 \
    libsm6 \
    libxext6 \
    libice6 \
    libmariadb-dev \
    libpulse0 \
    libegl1 \
    libxcb1 \
    libx11-xcb1 \
    && apt-get clean && rm -rf /var/lib/apt/lists/*

# Download dan ekstrak Blender 4.3.0 CLI
RUN wget https://mirror.clarkson.edu/blender/release/Blender4.3/blender-4.3.0-linux-x64.tar.xz && \
    tar -xf blender-4.3.0-linux-x64.tar.xz && \
    mv blender-4.3.0-linux-x64 /opt/blender && \
    ln -s /opt/blender/blender /usr/local/bin/blender && \
    rm blender-4.3.0-linux-x64.tar.xz

# Salin file requirements.txt dan install dependencies Python
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Salin semua source code ke dalam container
COPY . .

# Buat folder yang dibutuhkan oleh StaticFiles
RUN mkdir -p /app/render_output

# Jalankan FastAPI dengan uvicorn
CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "8000"]
